<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Order Page</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: url('img1.avif');
      background-color: #121212;
    }

    .login-container {
      background: #1e1e1e;
      padding: 2rem;
      border-radius: 10px;
      box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.2);
      text-align: center;
      max-width: 660px;
      width: 700px;
    }

    .login-container h2 {
      margin-bottom: 3rem;
      font-weight: 600;
      color: #e0e0e0;
    }

    .input-group {
      position: relative;
      margin-bottom: 1.5rem;
    }

    .input-group i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #9e9e9e;
    }

    .input-group input {
      width: 100%;
      padding: 10px;
      padding-left: 40px;
      border: 1px solid #333;
      border-radius: 8px;
      font-size: 16px;
      outline: none;
      background: #2d2d2d;
      color: #e0e0e0;
      transition: 0.3s;
    }

    .input-group input:focus {
      border-color: #e23744;
    }

    .btn {
      width: 400px;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
      margin-bottom: 10px;
    }

    .order {
      background: #e23744;
      color: #e0e0e0;
    }

    .order:hover {
      background: #c62d39;
    }

    #can {
      background: #2d2d2d;
      color: #e0e0e0;
      border: 1px solid #333;
    }

    #can:hover {
      background: #3d3d3d;
    }

    @media (max-width: 400px) {
      .login-container {
        padding: 1.5rem;
      }
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>Order Page</h2>
    <form action="/Submit" method="post">
      <div class="input-group">
        <i class="fas fa-user"></i>
        <input type="text" name="fullname" placeholder="Full Name" required />
      </div>

      <div class="input-group">
        <i class="fas fa-envelope"></i>
        <input type="email" name="email" placeholder="Email" required />
      </div>

      <div class="input-group">
        <i class="fas fa-house"></i>
        <input type="text" name="address" placeholder="Address" required />
      </div>

      <div class="input-group">
        <i class="fas fa-building"></i>
        <input type="text" name="houseno" placeholder="House no. or Apartment no." required />
      </div>

      <div class="input-group">
        <i class="fas fa-phone"></i>
        <input type="tel" name="phone" placeholder="Phone no." required />
      </div>

      <div class="input-group">
        <i class="fas fa-shopping-basket"></i>
        <input type="number" id="quantity-field" name="quantity" placeholder="Quantity" value="1" min="1" required readonly />
      </div>

      <button type="submit" class="btn order">Place Order</button>
    </form>
    <a href="/Delivery">
      <button id="can" class="btn order">Cancel Order</button>
    </a>
  </div>

  <script>
    window.onload = function () {
      const quantityField = document.getElementById('quantity-field');
      const savedQuantity = localStorage.getItem('orderQuantity');
      if (savedQuantity) {
        quantityField.value = savedQuantity;
      }
    };
  </script>
</body>
</html>
